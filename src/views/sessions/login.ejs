<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/forms.css">
    <title>Iniciar Sesion</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <main>
        <div class="container">

            <div class="container-form">

                <h1>¡Bienvenido de nuevo!</h1>

                <% if (locals.msgError) { %>
                    <p class="error-text" style="text-align: center; margin-bottom: 25px;"><%= msgError %></p>

                <% } %>

                <form action="/login"  method="POST">
    
                    <div class="campo">
                        <label for="dni_mail">DNI / Correo</label>
                        <input type="text" id="dni_mail" name="dni_mail" placeholder="45988352 / ejemplo@gmal.com" value="<%= locals.oldData ? oldData.dni_mail : null %>">
                        <% if (locals.errors && errors.dni_mail ) { %>
                            <p class="error-text"><%= errors.dni_mail.msg %></p>
                        <% } %>
                    </div>
    
                    <div class="campo" >
                        <label for="password">Contraseña</label>
                        <div id="toggle-psw">
                            <i  onclick="togglePsw('eye-psw','password')" style="cursor: pointer;"  id="eye-psw"  class="fa-regular fa-eye"></i>
                            <input  type="password" id="password" name="password" placeholder="*******" value="<%= locals.oldData ? oldData.password : null %>">
                        </div>
                        <% if (locals.errors && errors.password ) { %>
                            <p class="error-text"><%= errors.password.msg %></p>
                        <% } %>
                    </div>
    

                    <div style="display: flex; align-items: center; justify-content: center">
                        <p>¿Sos nuevo? Crea una cuenta <a href="/register" style="color: black;">Aquí</a></p> 
                    </div>
                     <div class="btn-container">
                        <a class="btn cancelar" href="/">Cancelar</a>
                        <button class="btn enviar" type="submit">Aceptar</button>
                     </div>
                </form>
            </div>
        </div>


    </main>
</body>
<script>
    const togglePsw = (iconid, inputid) => {
        let eye = document.getElementById(iconid);
        let psw = document.getElementById(inputid);

        if( eye.classList[1] === 'fa-eye') {
            eye.classList.remove('fa-eye')
            eye.classList.add('fa-eye-slash')
            psw.type = "text"
        } else {
            eye.classList.remove('fa-eye-slash')
            eye.classList.add('fa-eye')
            psw.type = "password"
        }
    }
</script>
<script src="/js/checkroute.js"></script>
</html>