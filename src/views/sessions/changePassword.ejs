<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/forms.css">
    <title>Cambiar contraseña</title>
</head>
<body>
    <main>
        <div class="container">

            <div class="container-form">

                <h1>Actualizar contraseña</h1>

                
                <form action="/profile/changePassword"  method="POST">
                    
                        <div class="campo" >
                            <label for="nombre">Nueva contraseña</label>
                            <div id="new-psw-toggle">
                                <i  onclick="togglePsw('eye-psw','new_psw')" style="cursor: pointer;"  id="eye-psw"  class="fa-regular fa-eye"></i>
                                <input type="password" id="new_psw" name="new_psw" placeholder="*******" value="<%= locals.oldData ? oldData.new_psw : null %>" >
                            </div>
                            <% if (locals.errors && errors.new_psw) { %>
                                <p class="error-text"><%= errors.new_psw.msg %></p>
                            <% } %>
                        </div>

                        <div class="campo" >
                            <label for="nombre">Confirmar contraseña</label>
                            <div id="confirm-psw-toggle">
                                <i  onclick="togglePsw('eye-psw2','confirm_psw')" style="cursor: pointer;"  id="eye-psw2"  class="fa-regular fa-eye"></i>
                                <input type="password" id="confirm_psw" name="confirm_psw" placeholder="*******" value="<%= locals.oldData ? oldData.confirm_psw : null %>" >
                            </div>
                            <% if (locals.errors && errors.confirm_psw) { %>
                                <p class="error-text"><%= errors.confirm_psw.msg %></p>
                            <% } %>
                        </div>
    
                        <div class="campo" >
                            <label for="nombre">Contraseña Actual</label>
                            <div id="old-psw-toggle">
                                <i  onclick="togglePsw('eye-psw3','old_psw')" style="cursor: pointer;"  id="eye-psw3"  class="fa-regular fa-eye"></i>
                                <input type="password" id="old_psw" name="old_psw" placeholder="***********" value="<%= locals.oldData ? oldData.old_psw : null %>" >
                            </div>
                            <% if (locals.errors && errors.old_psw) { %>
                                <p class="error-text"><%= errors.old_psw.msg %></p>
                            <% } %>
                        </div>
    

    
                    <div class="btn-container">
                        <a class="btn cancelar" href="<%= volverCambiarContrasenia %>">Cancelar</a>
                        <button class="btn enviar" type="submit">Aceptar</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>
<script>
    const togglePsw = (iconid, inputid) => {
        let eye = document.getElementById(iconid);
        let psw = document.getElementById(inputid);

        if( eye.classList[1] === 'fa-eye') {
            eye.classList.remove('fa-eye')
            eye.classList.add('fa-eye-slash')
            psw.type = "text"
        } else {
            eye.classList.remove('fa-eye-slash')
            eye.classList.add('fa-eye')
            psw.type = "password"
        }
    }
</script>
</html>