<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/notifications.css">
    <title>Notificaciones</title>
</head>
<body>
    <%- include("./partials/nav") %>
    <main>
        <div class="container">
                <div class="title-on-page">
                    <p style="margin: 0;"> Notificaciones</p>
                </div>

                <div class="container-notification">
                    <% if (notificaciones.length > 0) { %>
                        <% notificaciones.reverse().forEach(notificacion => { %>
                            <div class="card-notification">
                                <a class="card-notification-link" href="/profile/<%=notificacion.tipo%>">
                                    <div class="content">
                                        <div class="details">
                                            <p class="contenido"><%=notificacion.contenido%></p>           
                                        </div>
                                        <% if (notificacion.estado == "pendiente") { %>
                                            <i class="fa-solid fa-circle"></i>
                                        <% } %>
                                    </div>
                                </a>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p style="color: grey;">Todavia no tenes notificaciones</p>
                    <% } %>
                </div>
                
        </div>
    </main>
    <%- include("./partials/footer") %>
</body>
<script src="/js/checkroute.js"></script>
</html>